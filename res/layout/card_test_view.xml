<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingTop="22.0sp">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/land_bg">

		<ViewFlipper android:id="@+id/details"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:paddingTop="12sp" android:paddingLeft="8sp">

			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:id="@+id/layoutfront" android:layout_height="fill_parent" android:background="@drawable/flashcardfront">

				<TextView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/tvCardNumbr2"
					android:layout_marginLeft="20sp" android:textColor="#cc0000"
					android:textStyle="bold" android:textSize="12sp"
					android:hapticFeedbackEnabled="true" android:layout_marginTop="12sp"></TextView>

				<TextView android:id="@+id/tvflashCard1" android:textColor="#000"
					android:paddingLeft="20sp" android:paddingRight="20sp"
					android:layout_height="fill_parent" android:layout_width="fill_parent"
					android:paddingTop="10sp" android:layout_marginBottom="10sp"></TextView>

			</LinearLayout>

			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:background="@drawable/flashcardback" android:id="@+id/layoutfront" android:layout_height="fill_parent">

				<TableLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TableRow android:layout_width="fill_parent">
						<ImageView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/ivAnswered" android:background="@drawable/correct"
							android:layout_gravity="left|center_vertical" android:layout_marginLeft="0sp"></ImageView>
						<TextView android:layout_height="wrap_content"
							android:layout_width="wrap_content" android:gravity="right|center_vertical"
							android:layout_gravity="right|center_vertical" android:id="@+id/tvCardNumbr"
							android:textColor="#cc0000" android:textStyle="bold"
							android:textSize="12sp" android:text="Filler"></TextView>
					</TableRow>
				</TableLayout>
				<TextView android:id="@+id/tvflashCard2" android:textColor="#000"
					android:paddingLeft="20sp" android:paddingRight="20sp"
					android:layout_height="fill_parent" android:layout_width="fill_parent"
					android:paddingTop="10sp" android:layout_marginBottom="10sp"></TextView>
			</LinearLayout>

		</ViewFlipper>
	</LinearLayout>
</LinearLayout>